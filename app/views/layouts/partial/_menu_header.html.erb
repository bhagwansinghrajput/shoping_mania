<div class="container">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="/home/index"><img src="/assets/logo.png" alt="logo" height="80px"  width=150px /></a>
  </div>

  <div class="collapse navbar-collapse navbar-right">
    <ul class="nav navbar-nav">
      <li class=""><%= link_to "Home", root_path %></li>

      <% if user_signed_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Options<i class="fa fa-angle-down"></i></a>
          <ul class="dropdown-menu">
            <% if current_user.is_admin? %>
                <li><%= link_to "All users", users_path , :class => "button", :method => :get %></li>
                <li><%= link_to "All buyers", buyers_path, :type => 'button', :method => :get %></li>
            <% end %>
            <% if current_user.is_user? %>
              <li><%= link_to "Add products", new_product_path , :class => "button", :method => :get %></li>
              <li><%= link_to "All products", products_path, :class => "button", :method => :get %></li>
            <% end %>
            <% if current_user.is_buyer? %>
              <li><%= link_to "Your Cart", cart_item_index_path , :class => "button", :method => :get %></li>
            <% end %>  
          </ul>
        </li> 
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.first_name%> <i class="fa fa-angle-down"></i></a>
          <ul class="dropdown-menu">
            <li><%= link_to('Edit profile', edit_user_registration_path, :method => :get) %></li>
            <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
          </ul>
        </li> 
      <% else %>
          <li class=""><%= link_to('Login', new_user_session_path)  %></li>
          <li class=""><%= link_to('Sign up', new_user_registration_path)  %></li>
          
      <% end %>
      <% if current_user.present? %>
        <% if current_user.is_buyer? %>
          <li class="cart_size">
            <%= link_to  cart_item_index_path do %>
              <i class="fa fa-cart-arrow-down fa-5"></i>
              <span class="item_count"><%= current_user.cart.present? ? current_user.try(:cart).try(:cart_items).count : 0 %>
              </span>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div><!--/.container-->